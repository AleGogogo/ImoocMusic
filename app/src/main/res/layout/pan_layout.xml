<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true">


    <FrameLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/game_title">
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/id_pan_title"
            android:textColor="#ffffff"
            android:text="歌曲"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="260dp"
        android:layout_height="200dp"
       >
        <ImageView
            android:id="@+id/id_pan_imageview1"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="230dp"
            android:src="@drawable/game_disc"/>
        <ImageView
            android:id="@+id/id_pan_imageview2"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/game_disc_light"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/id_pan_but_start"
            android:background="@drawable/play_imooc_icon"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="150dp"
            android:id="@+id/id_pan_bar"
            android:layout_gravity="right"
            android:src="@drawable/index_pin"/>
    </FrameLayout>
</LinearLayout>